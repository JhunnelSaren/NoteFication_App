<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="834" prefWidth="1440" spacing="40" style="-fx-background-color: linear-gradient(to bottom, #e0eafc, #cfdef3); -fx-font-family: 'Segoe UI', sans-serif;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top Spacer -->
    <VBox VBox.vgrow="ALWAYS" />

    <!-- Logo with glow -->
    <ImageView fx:id="logoImage" fitHeight="270" fitWidth="270" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0, 122, 204, 0.6), 20, 0.3, 0, 6);">
        <Image url="@../../../Logo1.jpg" />
    </ImageView>

    <!-- Progress Indicator - increased size -->
    <ProgressIndicator fx:id="progressIndicator" prefHeight="75.0" prefWidth="66.0" style="-fx-progress-color: #008CFF;" />

    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-font-size: 18px; -fx-text-fill: #444;" text="Initializing... Please Wait!" />

    <!-- Decorative Line -->
    <Rectangle arcHeight="10" arcWidth="10" height="17" style="-fx-fill: linear-gradient(to right, #00c6ff, #0072ff);                       -fx-effect: dropshadow(gaussian, #007ACC, 8, 0.5, 0, 2);" width="500" />

    <!-- Version Text -->
    <Text fx:id="versionText" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Version 1.0.0" />

    <!-- Glowing Circle Accent -->
    <Circle fx:id="loadingCircle" fill="#00A6FF" radius="22" stroke="#004466" strokeWidth="2" style="-fx-effect: dropshadow(gaussian, #00c6ff, 15, 0.6, 0, 0);" />

    <!-- Bottom Spacer -->
    <VBox VBox.vgrow="ALWAYS" />
</VBox>
